<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">
    

    <Button
        android:id="@+id/show_list_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show list"
        android:contentDescription="show_list"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@+id/show_contributors"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/show_contributors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/make_call"
        android:contentDescription="@string/make_call_content_description"
        app:layout_constraintBottom_toBottomOf="@+id/show_list_button"
        app:layout_constraintLeft_toLeftOf="@+id/show_list_button"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/show_list_button" />

</androidx.constraintlayout.widget.ConstraintLayout>